@using Microsoft.AspNetCore.Identity
@using FitnessSystem.Areas.Identity.Data

@inject SignInManager<FitnessSystemUser> SignInManager
@inject UserManager<FitnessSystemUser> UserManager

<ul >
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link scrollto"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link scrollto">Logout</button>
        </form>
    </li>
        <li class="nav-item"> 
            <a asp-action="Index" class="nav-link btn btn-link scrollto" asp-controller="Registers">Dashboard</a>
        </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link scrollto" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link scrollto" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
